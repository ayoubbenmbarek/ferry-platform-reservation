# Frontend Development Environment Variables

# API Configuration
# Using relative path because of setupProxy.js which forwards to http://localhost:8010
# DO NOT use absolute URL here or CORS will fail
REACT_APP_API_URL=/api/v1

# Port for frontend development server (if 3000 conflicts with other apps)
# Uncomment and change if needed:
# PORT=3001

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_DEBUG=true

# Analytics (Development - disabled)
REACT_APP_GA_TRACKING_ID=
REACT_APP_ENABLE_ANALYTICS=false

