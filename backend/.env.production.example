# Production Environment Configuration
# IMPORTANT: Copy this file to .env.production and fill in the actual values

# Application Configuration
APP_NAME=Maritime Reservation Platform
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# Database Configuration (filled by docker-compose)
DATABASE_URL=postgresql://user:password@postgres:5432/maritime_reservations
TEST_DATABASE_URL=

# Redis Configuration (filled by docker-compose)
REDIS_URL=redis://:password@redis:6379/0

# Security - MUST CHANGE THESE
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Add your production domains
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Payment Configuration - Stripe
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Ferry Operator API Keys
# CTN (Compagnie Tunisienne de Navigation)
CTN_API_KEY=YOUR_CTN_API_KEY
CTN_BASE_URL=https://api.ctn.com.tn/v1/

# GNV (Grandi Navi Veloci)
GNV_CLIENT_ID=YOUR_GNV_CLIENT_ID
GNV_CLIENT_SECRET=YOUR_GNV_CLIENT_SECRET
GNV_BASE_URL=https://api.gnv.it/v2/

# Corsica Lines
CORSICA_API_KEY=YOUR_CORSICA_API_KEY
CORSICA_SECRET=YOUR_CORSICA_SECRET
CORSICA_BASE_URL=https://booking.corsicalines.com/api/v1/

# Danel Casanova
DANEL_USERNAME=YOUR_DANEL_USERNAME
DANEL_PASSWORD=YOUR_DANEL_PASSWORD
DANEL_BASE_URL=https://reservations.danel-casanova.fr/api/

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
CACHE_TTL_MINUTES=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery Configuration (filled by docker-compose)
CELERY_BROKER_URL=redis://:password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:password@redis:6379/1

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
