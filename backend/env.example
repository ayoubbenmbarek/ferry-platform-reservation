# Database Configuration
DATABASE_URL=postgresql://maritime_user:maritime_password@localhost:5432/maritime_reservations
TEST_DATABASE_URL=postgresql://maritime_user:maritime_password@localhost:5432/maritime_reservations_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3010", "http://127.0.0.1:3010"]

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@voilaferry.com

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Ferry Operator API Keys
# CTN (Compagnie Tunisienne de Navigation)
CTN_API_KEY=your-ctn-api-key
CTN_BASE_URL=https://api.ctn.com.tn/v1/

# GNV (Grandi Navi Veloci)
GNV_CLIENT_ID=your-gnv-client-id
GNV_CLIENT_SECRET=your-gnv-client-secret
GNV_BASE_URL=https://api.gnv.it/v2/

# Corsica Lines
CORSICA_API_KEY=your-corsica-api-key
CORSICA_SECRET=your-corsica-secret
CORSICA_BASE_URL=https://booking.corsicalines.com/api/v1/

# Danel Casanova
DANEL_USERNAME=your-danel-username
DANEL_PASSWORD=your-danel-password
DANEL_BASE_URL=https://reservations.danel-casanova.fr/api/

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
CACHE_TTL_MINUTES=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=True
ENVIRONMENT=development

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/ 