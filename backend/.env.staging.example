# Staging Environment Configuration
# IMPORTANT: Copy this file to .env.staging and fill in the actual values
# Staging should mirror production as closely as possible but with test credentials

# Application Configuration
APP_NAME=Maritime Reservation Platform (Staging)
VERSION=1.0.0
ENVIRONMENT=staging
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/maritime_staging
TEST_DATABASE_URL=

# Redis Configuration
REDIS_URL=redis://staging-redis:6379/0

# Security - Use different secrets from production
SECRET_KEY=STAGING_SECRET_KEY_MIN_32_CHARS_DIFFERENT_FROM_PROD
JWT_SECRET_KEY=STAGING_JWT_SECRET_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Staging domains
ALLOWED_ORIGINS=https://staging.yourdomain.com,http://localhost:3001

# Email Configuration - Use test/sandbox SMTP or mailhog
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@staging.yourdomain.com
FROM_NAME=Maritime Booking (Staging)

# Payment Configuration - USE STRIPE TEST MODE
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_TEST_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_TEST_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_TEST_WEBHOOK_SECRET

# Monitoring - Sentry (separate staging project)
SENTRY_DSN=https://staging-dsn@sentry.io/project
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Ferry Operator API Keys - Use sandbox/test APIs where available
# CTN (Compagnie Tunisienne de Navigation)
CTN_API_KEY=YOUR_CTN_TEST_API_KEY
CTN_BASE_URL=https://sandbox.ctn.com.tn/v1/

# GNV (Grandi Navi Veloci)
GNV_CLIENT_ID=YOUR_GNV_TEST_CLIENT_ID
GNV_CLIENT_SECRET=YOUR_GNV_TEST_CLIENT_SECRET
GNV_BASE_URL=https://sandbox.gnv.it/v2/

# Corsica Lines
CORSICA_API_KEY=YOUR_CORSICA_TEST_API_KEY
CORSICA_SECRET=YOUR_CORSICA_TEST_SECRET
CORSICA_BASE_URL=https://sandbox.corsicalines.com/api/v1/

# Danel Casanova
DANEL_USERNAME=YOUR_DANEL_TEST_USERNAME
DANEL_PASSWORD=YOUR_DANEL_TEST_PASSWORD
DANEL_BASE_URL=https://sandbox.danel-casanova.fr/api/

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
CACHE_TTL_MINUTES=5

# Logging - More verbose in staging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Celery Configuration
CELERY_BROKER_URL=redis://staging-redis:6379/1
CELERY_RESULT_BACKEND=redis://staging-redis:6379/1

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Rate Limiting - More relaxed for testing
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000

# Google OAuth (for testing)
GOOGLE_CLIENT_ID=YOUR_STAGING_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_STAGING_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=https://staging.yourdomain.com/api/v1/auth/google/callback

# OpenAI for voice search (optional in staging)
OPENAI_API_KEY=sk-your-staging-openai-key

# Base URL for email links
BASE_URL=https://staging.yourdomain.com
