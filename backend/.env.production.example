# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# IMPORTANT: Copy this file to .env.production and fill in REAL values
# NEVER commit .env.production to git!
# =============================================================================

# Application Configuration
APP_NAME=Maritime Reservation Platform
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# =============================================================================
# DATABASE - Use managed PostgreSQL (AWS RDS, Google Cloud SQL, etc.)
# =============================================================================
DATABASE_URL=postgresql://maritime_user:SECURE_PASSWORD@your-db-host:5432/maritime_prod

# =============================================================================
# REDIS - Use managed Redis (AWS ElastiCache, etc.) or self-hosted
# =============================================================================
REDIS_URL=redis://your-redis-host:6379/0
CELERY_BROKER_URL=redis://your-redis-host:6379/1
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/1

# =============================================================================
# SECURITY - Generate strong keys!
# python -c "import secrets; print(secrets.token_urlsafe(64))"
# =============================================================================
SECRET_KEY=GENERATE_64_CHAR_SECRET_KEY_HERE
JWT_SECRET_KEY=GENERATE_64_CHAR_JWT_SECRET_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS - Your production domains
# =============================================================================
ALLOWED_ORIGINS=https://voilaferry.com,https://www.voilaferry.com

# =============================================================================
# STRIPE - LIVE KEYS (NOT TEST!)
# Get from: https://dashboard.stripe.com/apikeys
# =============================================================================
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_LIVE_WEBHOOK_SECRET

# =============================================================================
# EMAIL - Production SMTP
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
# Consider using SendGrid, AWS SES, or Mailgun for production
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-production-email@gmail.com
SMTP_PASSWORD=YOUR_APP_PASSWORD
FROM_EMAIL=noreply@voilaferry.com
FROM_NAME=Maritime Ferry Booking

# =============================================================================
# GOOGLE OAUTH
# Configure at: https://console.cloud.google.com/apis/credentials
# Add production redirect URIs!
# =============================================================================
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-YOUR_PRODUCTION_SECRET
GOOGLE_REDIRECT_URI=https://api.voilaferry.com/api/v1/auth/google/callback

# =============================================================================
# OPENAI - For voice search
# =============================================================================
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY

# =============================================================================
# SENTRY - Error tracking
# Create project at: https://sentry.io
# =============================================================================
SENTRY_DSN=https://YOUR_KEY@YOUR_ORG.ingest.sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# FERRY OPERATOR APIs (when available)
# =============================================================================
CTN_API_KEY=
CTN_BASE_URL=https://api.ctn.com.tn/v1/

GNV_CLIENT_ID=
GNV_CLIENT_SECRET=
GNV_BASE_URL=https://api.gnv.it/v2/

CORSICA_API_KEY=
CORSICA_SECRET=
CORSICA_BASE_URL=https://api.corsicalines.com/api/v1/

DANEL_USERNAME=
DANEL_PASSWORD=
DANEL_BASE_URL=https://api.danel-casanova.fr/api/

# =============================================================================
# API & RATE LIMITING
# =============================================================================
API_TIMEOUT=30
MAX_RETRIES=3
CACHE_TTL_MINUTES=5
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# =============================================================================
# BASE URL - For email links
# =============================================================================
BASE_URL=https://voilaferry.com
