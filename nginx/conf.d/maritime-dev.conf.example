# Development configuration (HTTP only, no SSL)
# Rename this file to maritime-dev.conf for local development

upstream backend_servers {
    server backend:8000;
}

server {
    listen 80;
    server_name localhost;

    client_max_body_size 20M;

    # Logging
    access_log /var/log/nginx/maritime-dev-access.log;
    error_log /var/log/nginx/maritime-dev-error.log debug;

    # API endpoints
    location /api/ {
        proxy_pass http://backend_servers;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Health check
    location /health {
        access_log off;
        proxy_pass http://backend_servers/health;
    }

    # Frontend
    location / {
        proxy_pass http://frontend:80;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
